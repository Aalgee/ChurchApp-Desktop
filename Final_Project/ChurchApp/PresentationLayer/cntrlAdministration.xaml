<UserControl x:Class="PresentationLayer.cntrlAdministration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="1100"
             Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center">User List</Label>
            <DataGrid Grid.Row="1" x:Name="dgUserList" Margin="30 10 30 0" 
                  SelectionMode="Single" IsReadOnly="True"
                  AutoGeneratedColumns="DgUserList_AutoGeneratedColumns" 
            SelectionChanged="DgUserList_SelectionChanged"
                      />
                      
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="chkShowActive" IsChecked="True" Grid.Column="1" VerticalAlignment="Center" Click="ChkShowActive_Click"/>
                <Label VerticalAlignment="Center" HorizontalAlignment="Right" Content="Show Active: "/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="150"></RowDefinition>
                <!--<RowDefinition Height="30"></RowDefinition>-->
                <RowDefinition></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center">User Details</Label>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>



                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="65"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">User ID:</Label>
                <Label Grid.Column="2" Grid.Row="0" FontWeight="DemiBold" HorizontalAlignment="Right" Content="Active:"/>
                
                <Label Grid.Column="0" Grid.Row="1" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">First Name:</Label>
                <Label Grid.Column="0" Grid.Row="2" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">Last Name:</Label>
                <Label Grid.Column="0" Grid.Row="3" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">DOB:</Label>
                <Label Grid.Column="0" Grid.Row="4" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">Phone Number:</Label>
                <Label Grid.Column="0" Grid.Row="5" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">Email Address:</Label>
                <Label Grid.Column="2" Grid.Row="1" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">Address1:</Label>
                <Label Grid.Column="2" Grid.Row="2" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">Address2:</Label>
                <Label Grid.Column="2" Grid.Row="3" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">City:</Label>
                <Label Grid.Column="2" Grid.Row="4" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">State:</Label>
                <Label Grid.Column="2" Grid.Row="5" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center">Zip:</Label>

                <Label x:Name="lblUserId" Grid.Column="1" Grid.Row="0" FontSize="12"/>
                <TextBox x:Name="txtFirstName" IsEnabled="False" Grid.Column="1" Grid.Row="1" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtLastName" IsEnabled="False" Grid.Column="1" Grid.Row="2" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtDob" IsEnabled="False" Grid.Column="1" Grid.Row="3" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtPhoneNumber" IsEnabled="False" Grid.Column="1" Grid.Row="4" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtEmail" IsEnabled="False" Grid.Column="1" Grid.Row="5" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <CheckBox x:Name="chkActive" IsEnabled="False" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ChkActive_Click"/>
                <TextBox x:Name="txtAddress1" IsEnabled="False" Grid.Column="3" Grid.Row="1" FontSize="12" Margin="2 2 30 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtAddress2" IsEnabled="False" Grid.Column="3" Grid.Row="2" FontSize="12" Margin="2 2 30 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtCity" IsEnabled="False" Grid.Column="3" Grid.Row="3" FontSize="12" Margin="2 2 30 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtState" IsEnabled="False" Grid.Column="3" Grid.Row="4" FontSize="12" Margin="2 2 30 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtZip" IsEnabled="False" Grid.Column="3" Grid.Row="5" FontSize="12" Margin="2 2 30 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>

            </Grid>
            
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="DemiBold">User Roles</Label>
                <Label Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="DemiBold">Roles</Label>
                <Label Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="DemiBold">User Groups</Label>
                <Label Grid.Column="6" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="DemiBold">Groups</Label>
                <ListBox x:Name="lbUserRoles" Grid.Column="0" Grid.Row="1"></ListBox>
                <ListBox x:Name="lbRoles" Grid.Column="2" Grid.Row="1"></ListBox>
                <ListBox x:Name="lbUserGroups" Grid.Column="4" Grid.Row="1"></ListBox>
                <ListBox x:Name="lbGroups" Grid.Column="6" Grid.Row="1"></ListBox>
                
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="20" ></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button x:Name="btnRolesToUserRoles" Grid.Column="0" Grid.Row="1" Margin="8" FontSize="15" FontWeight="DemiBold" Content="&lt;&lt;" Click="BtnRolesToUserRoles_Click"/>
                    <Button x:Name="btnUserRolesToRoles" Grid.Column="0" Grid.Row="3" Margin="8" FontSize="15" FontWeight="DemiBold" Content="&gt;&gt;" Click="BtnUserRolesToRoles_Click"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button x:Name="btnGroupsToUserGroups" Grid.Column="0" Grid.Row="1" Margin="8" FontSize="15" FontWeight="DemiBold" Content="&lt;&lt;" Click="BtnGroupsToUserGroups_Click"/>
                    <Button x:Name="btnUserGroupsToGroups" Grid.Column="0" Grid.Row="3" Margin="8" FontSize="15" FontWeight="DemiBold" Content="&gt;&gt;" Click="BtnUserGroupsToGroups_Click"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnNew" Grid.Row="0" Grid.Column="2" Margin="30" Content="Creat New User" Click="BtnNew_Click"/>
                <Button x:Name="btnEdit" Grid.Row="0" Grid.Column="3" Margin="30" Content="Edit User" Click="BtnEdit_Click"/>
                <Button x:Name="btnSave" Grid.Row="0" Grid.Column="3" Margin="30" Content="Save User" Visibility="Hidden" Click="BtnSave_Click"/>
            </Grid>
        </Grid>


    </Grid>
</UserControl>
