<UserControl x:Class="PresentationLayer.cntrlScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="1100"
             Background="WhiteSmoke">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">Your Upcoming Schedule</Label>
            <DataGrid x:Name="dgSchedule" Grid.Row="1" Margin="20 10 20 20" FontSize="12" AutoGeneratedColumns="DgSchedule_AutoGeneratedColumns" 
                       IsReadOnly="True" SelectionMode="Single" SelectionChanged="DgSchedule_SelectionChanged"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
            </Grid>

        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition></RowDefinition>
                
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">Details</Label>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="20"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    
                    
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Event Name: "/>
                <Label Grid.Column="0" Grid.Row="1" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Schedule Type: "/>
                <Label Grid.Column="0" Grid.Row="2" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Start Time: "/>
                <Label Grid.Column="0" Grid.Row="3" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="End Time: "/>
                <Label Grid.Column="0" Grid.Row="4" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="First Name: "/>
                <Label Grid.Column="0" Grid.Row="5" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Last Name: "/>
                <Label Grid.Column="0" Grid.Row="6" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Activity Type: "/>
                <Label Grid.Column="2" Grid.Row="0" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Location Name: "/>
                <Label Grid.Column="2" Grid.Row="1" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Address1: "/>
                <Label Grid.Column="2" Grid.Row="2" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Address2: "/>
                <Label Grid.Column="2" Grid.Row="3" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="City: "/>
                <Label Grid.Column="2" Grid.Row="4" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="State: "/>
                <Label Grid.Column="2" Grid.Row="5" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Zip: "/>



                <TextBox x:Name="txtActivityName" IsReadOnly="True" Grid.Column="1" Grid.Row="0" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtScheduleType" IsReadOnly="True" Grid.Column="1" Grid.Row="1" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtStartTime" IsReadOnly="True" Grid.Column="1" Grid.Row="2" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtEndTime" IsReadOnly="True" Grid.Column="1" Grid.Row="3" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtFirstName" IsReadOnly="True" Grid.Column="1" Grid.Row="4" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtLastName" IsReadOnly="True" Grid.Column="1" Grid.Row="5" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtActivityType" IsReadOnly="True" Grid.Column="1" Grid.Row="6" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtLocationName" IsReadOnly="True" Grid.Column="3" Grid.Row="0" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtAddress1" IsReadOnly="True" Grid.Column="3" Grid.Row="1" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtAddress2" IsReadOnly="True" Grid.Column="3" Grid.Row="2" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtCity" IsReadOnly="True" Grid.Column="3" Grid.Row="3" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtState" IsReadOnly="True" Grid.Column="3" Grid.Row="4" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtZip" IsReadOnly="True" Grid.Column="3" Grid.Row="5" FontSize="12" Margin="2 2 20 2"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="LightGoldenrodYellow"/>
                
                
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Description: "/>
                
            </Grid>
            <Grid Grid.Row="3">
                <TextBox IsReadOnly="True" x:Name="txtDescription"  Margin="25 0 50 50" ></TextBox>
            </Grid>


        </Grid>

    </Grid>
</UserControl>
