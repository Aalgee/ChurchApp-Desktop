<UserControl x:Class="PresentationLayer.cntrlFacilities"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1100"
             Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Content="Facilities"/>
            <DataGrid x:Name="dgAllFacilities" Grid.Row="1" Margin="30 0" IsReadOnly="True" SelectionMode="Single" SelectionChanged="DgAllFacilities_SelectionChanged" AutoGeneratedColumns="DgAllFacilities_AutoGeneratedColumns"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnFacilitySchedule" Content="Facility Schedule" Margin="20 30" Click="BtnFacilitySchedule_Click"/>
                <Button x:Name="btnViewMyReservations" HorizontalContentAlignment="Center" Grid.Column="1" Content="   View My&#x0a;Reservations" Margin="20 30" Click="BtnViewMyReservations_Click"/>
                <Button x:Name="btnReserveFacility" Grid.Column="2" Content="Reserve Facility" Margin="20 30" Click="BtnReserveFacility_Click"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Content="Facility Details" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblFacilityID" Content="Facility ID: " FontWeight="DemiBold"  HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Label x:Name="lblFacilityName" Content="Facility Name: " Grid.Row="1" FontWeight="DemiBold"  HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Label x:Name="lblPricePerHour" Content="Price Per Hour: " Grid.Row="2" FontWeight="DemiBold"  HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Label x:Name="lblFacilityType" Content="Factility Type: " Grid.Row="3" FontWeight="DemiBold"  HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Label x:Name="lblDescription" Content="Description: " Grid.Row="4" FontWeight="DemiBold" HorizontalAlignment="Right" Margin="0 10" VerticalAlignment="Top"/>
                <TextBox x:Name="txtFacilityID" IsReadOnly="True" Grid.Column="1" Grid.Row="0" Margin="0 0 50 0" Height="30" Background="LightGoldenrodYellow" VerticalContentAlignment="Center"/>
                <TextBox x:Name="txtFacilityName" IsReadOnly="True" Grid.Column="1" Grid.Row="1" Margin="0 0 50 0" Height="30" Background="LightGoldenrodYellow" VerticalContentAlignment="Center"/>
                <TextBox x:Name="txtPricePerHour" IsReadOnly="True" Grid.Column="1" Grid.Row="2" Margin="0 0 50 0" Height="30" Background="LightGoldenrodYellow" VerticalContentAlignment="Center"/>
                <TextBox x:Name="txtFacilityType" IsReadOnly="True" Grid.Column="1" Grid.Row="3" Margin="0 0 50 0" Height="30" Background="LightGoldenrodYellow" VerticalContentAlignment="Center"/>
                <TextBox x:Name="txtDescription" IsReadOnly="True" Grid.Column="1" Grid.Row="4" Margin="0 13 50 0" Height="130" VerticalAlignment="Top" Background="LightGoldenrodYellow"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnAddNew" Content="Add New Facility" Margin="20 30" Click="BtnAddNew_Click"/>
                <Button x:Name="btnSave" Grid.Column="2" Content="Save" Margin="20 30" Click="BtnSave_Click"/>
                <Button x:Name="btnEdit" Grid.Column="2" Content="Edit" Margin="20 30" Click="BtnEdit_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
