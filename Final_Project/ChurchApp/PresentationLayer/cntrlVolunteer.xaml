<UserControl x:Class="PresentationLayer.cntrlVolunteer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1100"
             Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Content="My Volunteered Activities" />
            <DataGrid x:Name="dgUserVolunteerActivities" IsReadOnly="True" SelectionMode="Single" Grid.Row="1" Margin="20 0 20 20" AutoGeneratedColumns="DgUserVolunteerActivities_AutoGeneratedColumns"/>
            <Button x:Name="btnCancelActivity" Grid.Row="2" Margin="20 30 230 30" Content="Cancel Activity" Click="BtnCancelActivity_Click"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Volunteering" />
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblVolunteerStatus" Grid.Column="0" Content="Volunteer Status: " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="txtVolunteerStatus" Grid.Column="1" IsReadOnly="True" Background="LightGoldenrodYellow" VerticalContentAlignment="Center"  Margin="0 20 20 20"/>
            </Grid>
            
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnApplyVolunteer" Margin="30 30" Content="Apply as Volunteer" Click="BtnApplyVolunteer_Click"/>
                <Button x:Name="btnCancelVolunteer" Margin="30 30" Grid.Column="1" Content="Cancel as Volunteer" Click="BtnCancelVolunteer_Click"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Activities I can Volunteer for" />
            <DataGrid x:Name="dgVolunteerActivities" IsReadOnly="True" SelectionMode="Single" Grid.Row="1" Margin="20 0 20 20" AutoGeneratedColumns="DgVolunteerActivities_AutoGeneratedColumns"/>
            
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnSignupActivity" Grid.Column="1" Margin="20 30" Content="Sign up for Activity" Click="BtnSignupActivity_Click"/>
                <Button x:Name="btnApproveDeny" Grid.Column="0" Margin="20 30" Content="Approve/Deny Volunteer" Click="BtnApproveDeny_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
