<UserControl x:Class="PresentationLayer.cntrlActivity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1100"
             Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="250"></RowDefinition>
                <RowDefinition Height="50" ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Content="List of Upcoming Activities"/>
            <DataGrid Grid.Row="1" x:Name="dgActivityList" Margin="30 10 30 0" 
                  SelectionMode="Single" IsReadOnly="True"
                  AutoGeneratedColumns="DgActivityList_AutoGeneratedColumns"
                      SelectionChanged="DgActivityList_SelectionChanged"
                      />
            <Label Grid.Row="2" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Content="My Upcoming Activities"/>
            <DataGrid Grid.Row="3" x:Name="dgUserActivityList" Margin="30 0 30 20" 
                  SelectionMode="Single" IsReadOnly="True" 
                      AutoGeneratedColumns="DgUserActivityList_AutoGeneratedColumns"
                      SelectionChanged="DgUserActivityList_SelectionChanged"/>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnSignUp" Margin="20 20" Content="Sign Up for Activity" FontWeight="DemiBold" Grid.Row="0" Click="BtnSignUp_Click"/>
                <Button x:Name="btnCancel" Margin="20 20" Content="Cancel Attendance" FontWeight="DemiBold" Grid.Row="0" Grid.Column="2" Click="BtnCancel_Click"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="180"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Content="Activity Details"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Activity Name: "/>
                <Label Grid.Column="0" Grid.Row="1" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Activity Type: "/>
                <Label Grid.Column="0" Grid.Row="2" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Start: "/>
                <Label Grid.Column="0" Grid.Row="3" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="End: "/>
                <Label Grid.Column="2" Grid.Row="0" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Location: "/>
                <Label Grid.Column="2" Grid.Row="1" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Address1: "/>
                <Label Grid.Column="2" Grid.Row="2" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Address2: "/>
                <Label Grid.Column="2" Grid.Row="3" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="City: "/>
                <Label Grid.Column="2" Grid.Row="4" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="State: "/>
                <Label Grid.Column="2" Grid.Row="5" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Zip: "/>
                <Label Grid.Column="0" Grid.Row="5" FontSize="12" FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Description: "/>


                <TextBox x:Name="txtActivityName" IsReadOnly="True" Grid.Column="1" Grid.Row="0" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <ComboBox x:Name="cmbActivityType" IsEnabled="False" Grid.Column="1" Grid.Row="1" Margin="2 2 20 2"/>
                <!--<TextBox x:Name="txtActivityType" IsReadOnly="True" Grid.Column="1" Grid.Row="1" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>-->
                <TextBox x:Name="txtStart" IsReadOnly="True" Grid.Column="1" Grid.Row="2" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtEnd" IsReadOnly="True" Grid.Column="1" Grid.Row="3" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtLocation" IsReadOnly="True" Grid.Column="3" Grid.Row="0" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtAddress1" IsReadOnly="True" Grid.Column="3" Grid.Row="1" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtAddress2" IsReadOnly="True" Grid.Column="3" Grid.Row="2" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtCity" IsReadOnly="True" Grid.Column="3" Grid.Row="3" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtState" IsReadOnly="True" Grid.Column="3" Grid.Row="4" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
                <TextBox x:Name="txtZip" IsReadOnly="True" Grid.Column="3" Grid.Row="5" FontSize="12" Margin="2 2 20 2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="LightGoldenrodYellow"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        
                    </Grid.RowDefinitions>
                    <TextBox x:Name="txtDescription" IsReadOnly="True" Grid.Row="0" TextWrapping="Wrap" FontSize="12" Margin="20 0 30 40"  Background="LightGoldenrodYellow" Grid.ColumnSpan="2"/>
                    <Label Grid.Row="1" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Content="Groups Participating"/>
                    <ListBox x:Name="lbGroupsParticipating" Grid.Row="2" Margin="30 0 30 20"/>



                </Grid>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>


                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="People Attending"/>
                    <DataGrid Grid.Column="0" Grid.Row="1" x:Name="dgPeopleAttending" Margin="30 10 30 20" 
                  SelectionMode="Single" IsReadOnly="True" AutoGeneratedColumns="DgPeopleAttending_AutoGeneratedColumns"/>

                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnEdit" Visibility="Hidden" Margin="20 20" Content="Edit Actvivity" FontWeight="DemiBold" Grid.Column="2" Click="BtnEdit_Click"/>
                <Button x:Name="btnSave" Visibility="Hidden" Margin="20 20" Content="Save" FontWeight="DemiBold" Grid.Column="2" Click="BtnSave_Click"/>
                <Button x:Name="btnAddNew" Visibility="Hidden" Margin="20 20" Content="Add New Acivity" FontWeight="DemiBold" Grid.Column="1" Click="BtnAddNew_Click"/>
                <Button x:Name="btnCancelActivity" Visibility="Hidden" Margin="20 20" Content="Cancel Activity" FontWeight="DemiBold" Grid.Column="0" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
