<UserControl x:Class="PresentationLayer.cntrlScheduling"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1100"
             Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Content="All Activities" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <DataGrid x:Name="dgAllActivities" Grid.Row="1" Margin="20 0 20 0" IsReadOnly="True" AutoGeneratedColumns="DgAllActivities_AutoGeneratedColumns" SelectionChanged="DgAllActivities_SelectionChanged"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Content="Scheduling" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="Volunteers signed up" FontWeight="DemiBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    <DataGrid x:Name="dgVolunteersSignedUp" Grid.Row="1" Margin="10 0" SelectionMode="Single" IsReadOnly="True" GridLinesVisibility="None" HeadersVisibility="None" AutoGeneratedColumns="DgVolunteersSignedUp_AutoGeneratedColumns"/>
                    <Label Grid.Row="2" Content="Employees Scheduled" FontWeight="DemiBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    <DataGrid x:Name="dgScheduledEmployees" Grid.Row="3" Margin="10 0" SelectionMode="Single" IsReadOnly="True" GridLinesVisibility="None" HeadersVisibility="None" AutoGeneratedColumns="DgScheduledEmployees_AutoGeneratedColumns"/>


                <Label Content="All Volunteers" Grid.Column="1" Grid.Row="0" FontWeight="DemiBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                <DataGrid x:Name="dgAllVolunteers" Grid.Column="1" Grid.Row="1" Margin="10 0" SelectionMode="Single" IsReadOnly="True" GridLinesVisibility="None" HeadersVisibility="None" AutoGeneratedColumns="DgAllVolunteers_AutoGeneratedColumns" SelectionChanged="DgAllVolunteers_SelectionChanged"/>

                <Label Content="All Employees" Grid.Column="1" Grid.Row="2" FontWeight="DemiBold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    <DataGrid x:Name="dgAllEmployees" Grid.Column="1" Grid.Row="3" Margin="10 0" SelectionMode="Single" IsReadOnly="True" GridLinesVisibility="None" HeadersVisibility="None" AutoGeneratedColumns="DgAllEmployees_AutoGeneratedColumns" SelectionChanged="DgAllEmployees_SelectionChanged"/>
                
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label x:Name="lblAssignEmployeeActivity" Grid.Column="1" Content="Activity" HorizontalAlignment="Center" FontWeight="DemiBold" FontSize="12"/>
                <Label x:Name="lblUnassignEmployeeActivity" Grid.Column="0" Content="Activity" HorizontalAlignment="Center" FontWeight="DemiBold" FontSize="12"/>
                <Button x:Name="btnUnassignEmployee" Grid.Column="0" Grid.Row="1" Margin="20 0 20 30" Content="Unassign Employee" Click="BtnUnassignEmployee_Click"/>
                <Button x:Name="btnAssignEmployee" Grid.Column="1" Grid.Row="1"  Margin="20 0 20 30" Content="Assign Employee" Click="BtnAssignEmployee_Click"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblIndividualsSchedule" Content="Individuals Schedule" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <DataGrid x:Name="dgIndividualsSchedule" Grid.Row="1" Margin="20 0 20 0" IsReadOnly="True" SelectionMode="Single" AutoGeneratedColumns="DgIndividualsSchedule_AutoGeneratedColumns"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnUnassignActivity" Grid.Column="1" Margin="10 30 20 30" Content="Unassign Activity"/>
            </Grid>
            
        </Grid>
    </Grid>
</UserControl>
